<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<HBox prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bkpp.MainController">
    <VBox prefHeight="800.0" prefWidth="159.0">
        <TitledPane prefWidth="200.0" text="Zapisz/Wczytaj" expanded="false">
            <VBox prefWidth="160">
                <Button mnemonicParsing="false" onAction="#loadSignal" prefHeight="25.0"
                        prefWidth="150.0" text="Wczytaj"/>
                <ComboBox fx:id="signalsToSave" prefHeight="25.0" prefWidth="150.0"/>
                <Button mnemonicParsing="false" onAction="#saveSignal" prefHeight="25.0"
                        prefWidth="150.0" text="Zapisz"/>
            </VBox>
        </TitledPane>

        <TitledPane prefWidth="200.0" text="Generuj" expanded="false">
            <VBox prefWidth="160">
                <ComboBox fx:id="signalChoiceBox" onAction="#onSignalChosen" prefHeight="25.0"
                          prefWidth="150.0"/>
                <VBox fx:id="parameters"/>
                <Button mnemonicParsing="false" onAction="#generateSignal"
                        prefHeight="25.0" prefWidth="150.0" text="Generuj"/>
            </VBox>
        </TitledPane>


        <TitledPane prefWidth="200.0" text="Operacje" expanded="false">
            <VBox prefWidth="160">
                <ComboBox fx:id="firstSignals" prefHeight="25.0" prefWidth="228.0"/>
                <ComboBox fx:id="secondSignals" prefHeight="25.0" prefWidth="210.0"/>
                <Button mnemonicParsing="false" onAction="#addSignals" prefHeight="25.0"
                        prefWidth="150.0" text="Dodaj"/>
                <Button mnemonicParsing="false" onAction="#subtractSignals"
                        prefHeight="25.0" prefWidth="150.0" text="Odejmij"/>
                <Button mnemonicParsing="false" onAction="#divideSignals" prefHeight="25.0"
                        prefWidth="150.0" text="Podziel"/>
                <Button mnemonicParsing="false" onAction="#multiplySignals"
                        prefHeight="25.0" prefWidth="150.0" text="Pomnóż"/>
            </VBox>
        </TitledPane>

        <TitledPane prefWidth="200.0" text="Wartosci" expanded="false">
            <VBox prefWidth="160">
                <Label fx:id="avgValue" prefWidth="150.0" text="Wartosc srednia " wrapText="true"/>
                <Label fx:id="absoluteAvgValue" prefWidth="150.0" text="Bez. wart srednia" wrapText="true"/>
                <Label fx:id="power" prefWidth="150.0" text="Moc" wrapText="true"/>
                <Label fx:id="variance" prefWidth="150.0" text="Wariacja" wrapText="true"/>
                <Label fx:id="effectiveValue" prefWidth="150.0" text="Wartosc skuteczna" wrapText="true"/>
            </VBox>
        </TitledPane>

        <TitledPane prefWidth="200.0" text="Konwerter" expanded="false">
            <VBox prefWidth="160">
                <ComboBox fx:id="signalsToQuantization" prefHeight="25.0" prefWidth="228.0"/>
                <Label prefWidth="160" text="Bity"/>
                <TextField fx:id="quantizationBytes" prefWidth="160.0" promptText="Bity"/>
                <Label prefWidth="160" text="Probkowanie(Co ktory pkt)" wrapText="true"/>
                <TextField fx:id="quantizationSampling" prefWidth="160.0" promptText="Probkowanie"/>
                <Button mnemonicParsing="false" onAction="#quantization"
                        prefHeight="25.0" prefWidth="150.0" text="Kwantyzuj"/>
                <Button mnemonicParsing="false" onAction="#reconstruction"
                        prefHeight="25.0" prefWidth="150.0" text="Rekonstruuj"/>
                <Label fx:id="meanSquaredError" prefWidth="150.0" text="Blad sr. kwadratowy " wrapText="true"/>
            </VBox>
        </TitledPane>
        <Button mnemonicParsing="false" onAction="#clearChart" prefHeight="25.0"
                prefWidth="100.0" text="Wyczysc" alignment="CENTER"/>
    </VBox>
    <LineChart fx:id="chart" prefHeight="800.0" prefWidth="841.0">
        <xAxis>
            <NumberAxis side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT"/>
        </yAxis>
    </LineChart>
</HBox>
